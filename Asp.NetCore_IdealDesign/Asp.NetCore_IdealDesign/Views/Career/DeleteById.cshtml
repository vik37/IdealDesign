@model CareerVM
@inject IViewLocalizer _localizer;
@{
    ViewData["Title"] = _localizer["Delete"];
}

<div class="container my-container">
    <div class="col-md-12">
        <div class="col-xs-1 col-sm-3 col-md-3"></div>
        <div class="col-xs-1 col-sm-1 col-md-1 container-questionBlock">
            <h5>@_localizer["Are you sure"]?</h5>
            <div class="row"></div>
            <div class="container-yesNo">
                <div class="col-xs-1 col-sm-1 col-md-1 yes">
                    <form class="form-yes" asp-action="Delete" asp-controller="Career" asp-route-id="@Model.Id" method="get">
                        <input class="ask-yes" type="submit" value=@_localizer["YES"] />
                    </form>
                </div>
                <div class="col-xs-5 col-sm-8 col-md-8"></div>
                <div class="col-xs-1 col-sm-1 col-md-1 no">
                    <p class="ask-no">@_localizer["NO"]</p>
                </div>
            </div>
        </div>
        <div class="row"></div>
        <div class="container-main">
            <div class="col-xs-2 col-md-2">
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.Resume)
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(x => x.Firstname)
                    </dt>
                    <dd>
                        @Html.DisplayFor(x => x.Firstname)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(x => x.Lastname)
                    </dt>
                    <dd>
                        @Html.DisplayFor(x => x.Lastname)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(x => x.Phone)
                    </dt>
                    <dd>
                        @Html.DisplayFor(x => x.Phone)
                    </dd>
                </dl>
            </div>
            <div class="col-xs-12 col-md-6"></div>
            <div class="col-xs-4 col-md-4">
                <h6 class="description">@Html.DisplayNameFor(x => x.Description)</h6>
                <p class="description-text">@Html.DisplayFor(x => x.Description)</p>
            </div>
        </div>
    </div>
</div>
<link href="~/css/Career/deleted.css" rel="stylesheet" />
<script src="~/js/deleted.js"></script>