@model List<CareerVM>
@inject IViewLocalizer _localizer;
@{
    ViewData["Title"] = _localizer["APPLICANTS"];
}


<div class="container my-container">

    <h2 class="aplicants-heading">@ViewData["Title"]</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th class="text-center" scope="col">#</th>
                <th scope="col">@_localizer["First Name"]</th>
                <th scope="col">@_localizer["Last Name"]</th>
                <th scope="col">@_localizer["Phone"]</th>
                <th scope="col">@_localizer["Description"]</th>
                @*<th scope="col">Resume</th>*@
                <th scope="col">@_localizer["Links"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var people in Model)
            {
                <tr>
                    <td>@people.Id</td>
                    <td>@people.Firstname</td>
                    <td>@people.Lastname</td>
                    <td>@people.Phone</td>
                    <td class="cell-description">@people.Description.Substring(0, 30)</td>

                    <td class="cell-links">
                        <div class="col-md-1"></div>
                        <a asp-action="Detail" asp-controller="Career" asp-route-id="@people.Id"
                           class="col-md-2 btn button button-detail">@_localizer["Details"]</a>

                        @*<button type="button" class="button button-detail">See Details</button>*@
                        <form class="col-md-4" asp-action="DeleteById" asp-controller="Career" asp-route-id="@people.Id" method="get">
                            <button type="submit" value="delete" class="button button-remove">@_localizer["Remove Alpicant"]</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<style type="text/css">
    .my-container {
        /*border: 3px solid black;*/
        /*padding: 50px;*/
        margin-top: 250px;
        width: 100%;
        height: auto;
        background-color: #969696;
        /*padding-left: 130px;*/
    }
    .aplicants-heading {
        text-align: center;
        background-image: repeating-linear-gradient(to left,rgb(199 17 17 / 0.72) 15%, rgb(3 132 14 / 0.65) 40%);
        box-shadow:rgb(223 224 17) 2px -10px 10px inset;
        text-shadow:1px 1px 2px rgb(251 247 247);
        letter-spacing:3px;
        font-weight:700;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        border-right:20px double rgb(57 7 122);
        border-bottom-left-radius:60px;
        border-top-left-radius:60px;
    }
    td {
        border-left: 3px groove black;
        
    }

    th {
        background-color: violet;
        text-shadow: 1px -1px 2px #d7f602;
    }

    td:first-child {
        border-left: none;
    }

    .cell-description {
        width: 150px;
        border-radius: 10px;
        padding-right: 50px;
    }

    .cell-links {
        background-image: linear-gradient(336deg, rgba(0,0,255,.8), rgba(0,0,255,0) 40.71%);
    }

    .button {
        margin-top: 6px;
        color: #fff;
        font-size: 17px;
        letter-spacing: 1.2px;
        text-shadow: 2px 1px 2px rgba(255, 168, 248, 0.89);
    }

    .button-detail {
        background-color: #05591c;
        color: #fff;
        height: 35px;
    }

        .button-detail:hover {
            background-color: #ffa600;
        }

        .button-detail:active {
            background-color: #fff;
            color: #000;
        }

    .button-remove {
        background-color: #000;
        width: 180px;
    }

        .button-remove:hover {
            background-color: #753838;
        }

        .button-remove:active {
            background-color: #ff0000;
            color: #000;
        }

    td {
        font-size: 14px;
        font-weight: 700;
        letter-spacing: 1.4px;
    }
</style>