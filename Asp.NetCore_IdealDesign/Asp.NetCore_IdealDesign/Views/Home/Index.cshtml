@model ProductTypeVM 
@{
    ViewData["Title"] = "IDEAL DESIGN";

}

<div class="container my-container">
    <div class="slide-container">
        @for (int i = 1; i <= 3; i++)
        {
            <div class="mySlide fades">
                <img src="~/images/Ideal_pic/dressers/dressers_@(i).jpg" />
            </div>
        }
        <a class="prev">&#10094;</a>
        <a class="next">&#10095;</a>
    </div>
    <div style="text-align:center">
        @{int count = 0;}
        @while (count < 3)
        {
            <span class="dot"></span>
            count++;
        }
    </div>
    <hr />
    <br />
    <div class="context-first">
        <h3>@ViewBag.context1</h3>
    </div>
    <br />
    <hr />
    <br />
    <div class="row images">
        @for (int i = 1; i <= 4; i++)
        {
            <div class="col-xs-6 col-md-3">
                <img src="images/Ideal_pic/dressers/dressers_@(i).jpg" alt="header" style="height:200px" class="thumbnail">
            </div>
        }
    </div>
    <hr />
    <br />
    <div class="context-first">
        <h3>@ViewBag.context2</h3>
        <i class="fa fa-facebook">&#xf230;</i>
    </div>
    <br />
    <hr />
    <br />
    <partial name="_BackToTopPartial" />
</div>
<link href="~/css/Home/home.css" rel="stylesheet" />
<script src="~/js/home.js"></script>