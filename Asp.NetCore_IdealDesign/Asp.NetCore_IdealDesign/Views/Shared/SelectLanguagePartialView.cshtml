@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItem = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();

}

<div title="@Localizer["Request culture provider: "] @requestCulture?.Provider?.GetType().Name">
    <form id="Select Language" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path"
          method="post" class="form-horizontal" role="form">
        <div class="col-md-1"></div>
        @Localizer["Language:"] <select name="culture"
                                        asp-for="@requestCulture.RequestCulture.UICulture.Name" class="language" asp-items="cultureItem"></select>
        <button type="submit" class="btn-language btn-default btn-xs"><i>Save</i></button>
    </form>
</div>
<style type="text/css">
    .language{
        background-color:rgb(0, 0, 0);
        color:rgb(255, 255, 255);
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        cursor:pointer;
        height:27px;
    }
    .language > *{
        color:rgb(23, 71, 172);          
    }
    
    [value="mk"] {
        color: rgba(255, 0, 0,0.60);
        
    }
    [value="en-US"] {
        color: rgba(2, 189, 4,0.60);
    }
    [value="sq"] {
        color: rgba(153, 22, 172,0.60);
    }
    [selected="selected"] {
        background-color: rgba(245, 255, 74, 0.90);
        color: rgb(0, 0, 0);
    }
    .form-horizontal {
        color: rgba(255, 255, 255, 0.57);
        
    }
    .btn-language {
        background-color: rgb(0, 0, 0);
        color: rgb(255, 255, 255);
        text-shadow: 1px 1px rgb(248, 6, 255);
        outline-offset: 1px;
        outline-color: cornsilk;
        outline-width: 2px;
        border-radius: 6px;
        border:2px inset;
        outline-style: groove;
        transition: outline-offset 0.5s ease-out;
        font-weight: 600;
        letter-spacing: 0.6px;
        transition: background-color 1.8s ease-out;
        text-decoration:underline;
    }
    .btn-language:hover{
        text-shadow:1px 1px 2px  rgb(255, 255, 255);
        background-color:rgb(120, 206, 229);
        font-weight:bolder;
        /*color:rgb(255, 0, 0);*/
    }
    .btn-language:active{
        outline-offset:3px;
        box-shadow:rgb(255, 255, 255) 1px 1px 30px;
        font-size:14px;
    }
</style>